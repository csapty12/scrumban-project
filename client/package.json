{
  "name": "scrumban-react-client",
  "version": "1.0.0-alpha",
  "description": "scrumban client-side react",
  "main": "index.js",
  "author": "Carl Saptarshi",
  "private": true,
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "dependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "jest": "^24.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "cypress": "^3.1.5",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.4.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-css-modules": "^2.7.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.2",
    "react-hot-loader": "^3.1.3",
    "stylelint": "^9.3.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore --fix",
        "git add --force"
      ],
      "*.{json}": [
        "prettier --write",
        "git add --force"
      ],
      "*.{css,less,styl,scss,sass,sss}": [
        "stylelint --fix",
        "git add --force"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "fix": "yarn run fix:js && yarn run fix:css",
    "fix:css": "yarn run lint:css --fix",
    "fix:js": "yarn run lint:js --fix",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:css": "stylelint \"src/**/*.{css,less,styl,scss,sass,sss}\"",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "precommit": "lint-staged && jest",
    "start": "webpack-dev-server --hot --inline --progress --colors",
    "test": "jest",
    "test:cover": "yarn run test --coverage",
    "test:watch": "yarn run test --watch --notify"
  }
}
